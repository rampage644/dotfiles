# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
# bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym $left resize shrink width 10 px or 10 ppt
        bindsym $down resize grow height 10 px or 10 ppt
        bindsym $up resize shrink height 10 px or 10 ppt
        bindsym $right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

mode "passthrough" {
        # special mode for sublime text & terminal
        bindsym $mod+Escape mode "default"
}

bindsym $mod+Escape mode "passthrough"

bindsym $mod+d exec rofi -show window
bindsym $mod+Shift+d exec rofi -show drun
bindsym XF86AudioPlay exec cmus-remote -u
bindsym XF86AudioPrev exec cmus-remote -r
bindsym XF86AudioNext exec cmus-remote -n
bindsym XF86AudioLowerVolume exec amixer sset PCM 5%-
bindsym XF86AudioRaiseVolume exec amixer sset PCM 5%+
bindsym XF86MonBrightnessDown  exec  light -U 5
bindsym XF86MonBrightnessUp  exec  light -A 5
bindcode $mod+Ctrl+46 exec xautolock -locknow
# $mod+p, take screenshoot
bindcode --release $mod+33 exec scrot -s -e 'mv $f ~/tmp/screenshots/'

new_window none
new_float none
hide_edge_borders both
focus_follows_mouse yes
workspace_auto_back_and_forth yes

assign [class="^[Cc]hromium$"] → $ws2
assign [class="^Firefox$"] → $ws2
assign [title="Twitch"] → $ws9
assign [class="[Cc]ode"] → $ws3

for_window [class="VidyoDesktop"] floating enable, border normal


